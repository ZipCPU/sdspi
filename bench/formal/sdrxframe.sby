[tasks]
prf       opt_ds
prf4  prf opt_ds
prfs  prf
prfs4 prf prf4
cvr      opt_ds

[options]
prf: mode prove
depth 8
cvr: mode cover
cvr: depth 30

[engines]
smtbmc

[script]
read -formal sdrxframe.v
--pycode-begin--
cmd = "hierarchy -top sdrxframe"
cmd += " -chparam OPT_DS %d" % (1 if "opt_ds" in tags else 0)
cmd += " -chparam NUMIO %d" % (4 if "prf4" in tags else 8)
output(cmd)
--pycode-end--
proc -norom
prep -top sdrxframe

[files]
../../rtl/sdrxframe.v
