[tasks]
prf
prf4  prf
prfs  prf serdes
prfs4 prf prf4 serdes
cvr
cvrs cvr serdes

[options]
prf: mode prove
prf: depth 5
cvr: mode cover
cvr: depth 96

[engines]
smtbmc

[script]
read -formal sdtxframe.v
read -formal fclk.v
--pycode-begin--
cmd = "hierarchy -top sdtxframe"
cmd += " -chparam OPT_SERDES %d" % (1 if "serdes" in tags else 0)
cmd += " -chparam NUMIO %d" % (4 if "prf4" in tags else 8)
output(cmd)
--pycode-end--
proc -norom
prep -top sdtxframe

[files]
../../rtl/sdtxframe.v
fclk.v
